<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Picolo.Views.SignupPage"
             Title="Sign Up Page">
    <ContentPage.Content>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ScrollView Grid.Row="1">
                <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">

                    <Image Source="picolo_logo.png" Aspect="AspectFit"/>
                    <Label Text="Sign Up" HorizontalOptions="CenterAndExpand" />
                    <Label Text="Username" />
                    <Entry x:Name="usernameEntry" Placeholder="username" />
                    <Label Text="Password" />
                    <Entry x:Name="passwordEntry" IsPassword="true" />
                    <Button VerticalOptions="Center" Text="Create Account" Clicked="CreateButtonClicked"/>

                </StackLayout>
            </ScrollView>

        </Grid>
    </ContentPage.Content>
</ContentPage>